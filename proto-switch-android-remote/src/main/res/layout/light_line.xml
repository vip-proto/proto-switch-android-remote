<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/abc_control_padding_material"
    android:paddingBottom="@dimen/abc_control_padding_material">

    <ToggleButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/light_line_toggle_button"
        android:layout_weight="3"
        android:textOff="Light name"
        android:textOn="Light name"
        android:checked="true" />

    <SeekBar
        style="@android:style/Widget.DeviceDefault.SeekBar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:max="63"
        android:progress="15"
        android:id="@+id/light_line_seek_bar"
        android:layout_weight="2" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/light_line_color_button"
        android:layout_weight="1"
        android:paddingBottom="@dimen/abc_control_padding_material"
        android:paddingTop="8dp"/>

</LinearLayout>